  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "Debug tests",
      "request": "launch",
      "args": ["--runInBand", "--no-cache", "--watchAll=false"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "protocol": "inspector",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "env": { "CI": "true" },
      "program": "${workspaceFolder}/node_modules/jest/bin/jest"
    }
  ]
}
